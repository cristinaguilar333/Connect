<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearNota">

    <EditText
        android:id="@+id/etTituloNota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserratbold"
        android:hint="@string/t_tulo"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:textColor="@color/textooscuro"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.128"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.106" />

    <EditText
        android:id="@+id/etNota"
        android:layout_width="317dp"
        android:layout_height="116dp"
        android:layout_marginTop="29dp"
        android:background="@drawable/round_button"
        android:backgroundTint="@color/colorGris"
        android:fontFamily="@font/montserratregular"
        android:hint="Escriba su nota"
        android:textAlignment="viewStart"
        android:textColor="@color/textooscuro"
        android:textSize="14sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/etTituloNota"
        app:layout_constraintTop_toBottomOf="@+id/etTituloNota"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnGuardarNota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:background="@drawable/round_button"
        android:backgroundTint="@color/titulosres"
        android:text="Guardar"
        android:textColor="@color/inputtexto"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.821"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etNota"
        app:layout_constraintVertical_bias="0.086" />

    <TextView
        android:id="@+id/btnCancelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_marginTop="50dp"


        android:backgroundTint="@color/inputtexto"
        android:fontFamily="@font/montserratbold"
        android:text="CANCELAR"
        android:textColor="@color/titulosres"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnGuardarNota"
        app:layout_constraintHorizontal_bias="0.378"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etNota"
        app:layout_constraintVertical_bias="0.005" />


</androidx.constraintlayout.widget.ConstraintLayout>