<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="4dp"
        android:background="@drawable/send_round_box"
        android:backgroundTint="@color/azul70"
        android:padding="14dp"
        android:fontFamily="@font/montserratregular"
        android:textColor="@color/textooscuro"
        android:text="Ejemplo"
        />
    <TextView
        android:visibility="visible"
        android:id="@+id/tv_message2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_margin="4dp"
        android:background="@drawable/receive_round_box"
        android:backgroundTint="@color/inputtexto"
        android:padding="14dp"
        android:fontFamily="@font/montserratregular"
        android:textColor="@color/textooscuro"
        android:text="Ejemplo"
        />




</RelativeLayout>